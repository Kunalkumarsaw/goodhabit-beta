<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".tools.alarm.AlarmDismiss">

    <TextView
        android:id="@+id/labelDismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center"
        android:textColor="@color/primary_text_dark"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Time to wakeup!" />

    <TextClock
        android:id="@+id/textClockDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:format24Hour="hh:mm"
        android:gravity="center"
        android:textColor="@color/primary_text_dark"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/labelDismiss"
        tools:text="10:38" />

    <Button
        android:id="@+id/dismissButtonDismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:text="@string/dismiss"
        android:background="@drawable/strokedroundbutton"
        android:textAllCaps="false"
        android:backgroundTint="@color/purpleTheme"
        android:textColor="@color/primary_text_dark"
        android:textSize="@dimen/_18ssp"
        android:layout_margin="@dimen/_30sdp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDismiss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/textViewDismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/primary_text_dark"
        android:gravity="center"
        android:text="@string/exit_preview"
        android:textColor="@color/dark_background"
        android:textSize="@dimen/_16ssp"
        android:paddingStart="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/cross_icon"
        tools:ignore="contentDescription"
        android:layout_marginEnd="@dimen/_75sdp"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDismiss"
        app:layout_constraintEnd_toEndOf="@+id/textViewDismiss"
        app:layout_constraintStart_toStartOf="@+id/textViewDismiss"
        app:layout_constraintTop_toTopOf="@+id/textViewDismiss" />
</androidx.constraintlayout.widget.ConstraintLayout>